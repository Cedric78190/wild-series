{% block title %}Catégorie #{% endblock %}

{# {% block title %}All categories{% endblock %} #}

{% block body %}
    <h1>Toutes les categories : </h1>
    {% for category in categories %}
        <div>
            <a href="{{ path('category_show', {categoryName:category.name}) }}"><h2>{{ category.name }}</h2></a>
        </div>
    {% else %}
        Aucune category trouvée.
    {% endfor %}

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>

    </br>

    <a href="{{ path('program_index') }}">Voir l'ensemble des programes</a>
{% endblock %}